<beans:beans xmlns="http://www.springframework.org/schema/security"
    xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
    http://www.springframework.org/schema/security 
    http://www.springframework.org/schema/security/spring-security-4.2.xsd">
      
    <http auto-config="true" >
    	<!-- 管理员 -->
        <intercept-url pattern="/home.do" access="permitAll" />
    	<intercept-url pattern="/admin/user/login.do" access="permitAll" />
    	<intercept-url pattern="/j_spring_security_logout" access="permitAll" />
    	<intercept-url pattern="/admin/user/login.do" access="permitAll" />
    	<intercept-url pattern="/admin/user/logout.do" access="permitAll" />
    	<intercept-url pattern="/admin/user/modifyPassword.do" access="permitAll" />
    	<intercept-url pattern="/admin/index.do" access="permitAll" />
    	<intercept-url pattern="/admin/user/adminUserList.do" access="hasRole('AdminUserList')" />
    	<intercept-url pattern="/admin/user/createAdminUser.do" access="hasRole('CreateAdminUser')"/>
    	<intercept-url pattern="/admin/user/modifyAdminUser.do" access="hasRole('ModifyAdminUser')"/>
    	<intercept-url pattern="/admin/user/deleteAdminUser.do" access="hasRole('DeleteAdminUser')" />
    	<intercept-url pattern="/admin/user/adminGroupList.do" access="hasRole('AdminGroupList')" />
    	<intercept-url pattern="/admin/user/createAdminGroup.do" access="hasRole('CreateAdminGroup')"/>
    	<intercept-url pattern="/admin/user/modifyAdminGroup.do" access="hasRole('ModifyAdminGroup')"/>
    	<intercept-url pattern="/admin/user/deleteAdminGroup.do" access="hasRole('DeleteAdminGroup')" />
    	<intercept-url pattern="/admin/user/operationRecordList.do" access="hasRole('OperationRecordList')" />
    	
        <form-login
		    login-page="/admin/user/login.do"
		    login-processing-url="/j_spring_security_check"
			authentication-failure-url="/admin/user/login.do?error"
			default-target-url="/"
		    always-use-default-target="true"/>
		<logout 
			invalidate-session="true"
			logout-url="/admin/user/logout.do" 
			logout-success-url="/admin/user/login.do?logout" 
			delete-cookies="JSESSIONID" /><!-- 로그아웃 성공 후 -->
		<csrf/>
    </http>
  	
	<authentication-manager>
		<authentication-provider user-service-ref="userDetailsServiceImpl">  
            <password-encoder hash="md5" >  
                <salt-source user-property="username" />  
            </password-encoder>  
        </authentication-provider>  
    </authentication-manager>
    <beans:bean id="md5PasswordEncoder" class="org.springframework.security.authentication.encoding.Md5PasswordEncoder" />
    <beans:bean id="userDetailsServiceImpl" class="com.spring.service.admin.UserDetailsServiceImpl" />

</beans:beans>